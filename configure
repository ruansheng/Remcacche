#! /bin/sh

Makefile="Makefile"

#check env software


#write build Makefile

if [ ! -f ${MakeFile} ];
then
	touch ${Makefile}
	chmod 777 ${Makefile}
else
	chmod 777 ${Makefile}
fi

> ${Makefile}
echo "Remcache:server.o" >> ${Makefile}
echo "	@gcc -o Remcache server.o" >> ${Makefile}
echo  "	@echo doing compile server" >> ${Makefile}
echo >> ${Makefile}

echo "server.o:server.c" >>${Makefile}
echo "	@gcc -o server.o -c server.c" >> ${Makefile}
echo "	@echo doing compile server.o" >> ${Makefile}
echo >> ${Makefile}

echo "clean:" >> ${Makefile}
echo "	@rm Remcache server.o" >> ${Makefile}
echo "	@echo doing clean files" >> ${Makefile}
echo "	@echo clean finished !" >> ${Makefile}



